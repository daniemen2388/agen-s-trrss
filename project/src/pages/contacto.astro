---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

const metaTitle = "Contacto Agencia SEO Terrassa 【Marketing Digital】▷ Consulta Gratis";
const metaDescription = "Contacta con nuestra agencia de marketing digital en Terrassa. Solicita una consulta gratuita y descubre cómo podemos ayudarte a crecer online.";
---

<Layout 
  title="Contacto | Agencia SEO Terrassa"
  metaTitle={metaTitle}
  metaDescription={metaDescription}
>
  <main>
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto">
          <h1 class="font-signika font-extrabold text-5xl text-heading dark:text-dark-heading text-center mb-8">
            Contacta con nosotros
          </h1>
          <p class="text-text dark:text-dark-text text-center mb-12">
            ¿Listo para hacer crecer tu negocio online? Déjanos tus datos y nos pondremos en contacto contigo para analizar tu proyecto.
          </p>

          <form 
            id="contactForm"
            class="space-y-6 bg-white dark:bg-dark-background-alt p-8 rounded-lg shadow-lg"
          >
            <div>
              <label for="name" class="block text-heading dark:text-dark-heading font-heebo font-medium mb-2">
                Nombre *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-primary dark:focus:ring-dark-primary focus:border-transparent dark:bg-dark-background dark:text-dark-text"
                placeholder="Tu nombre"
              />
            </div>

            <div>
              <label for="email" class="block text-heading dark:text-dark-heading font-heebo font-medium mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-primary dark:focus:ring-dark-primary focus:border-transparent dark:bg-dark-background dark:text-dark-text"
                placeholder="tu@email.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-heading dark:text-dark-heading font-heebo font-medium mb-2">
                Teléfono *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-primary dark:focus:ring-dark-primary focus:border-transparent dark:bg-dark-background dark:text-dark-text"
                placeholder="Tu teléfono"
              />
            </div>

            <div>
              <label for="message" class="block text-heading dark:text-dark-heading font-heebo font-medium mb-2">
                Mensaje *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="4"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-primary dark:focus:ring-dark-primary focus:border-transparent dark:bg-dark-background dark:text-dark-text resize-none"
                placeholder="Cuéntanos sobre tu proyecto..."
              ></textarea>
            </div>

            <div class="text-center">
              <Button type="submit" variant="primary" className="w-full">
                Enviar mensaje
              </Button>
              <p id="formError" class="mt-4 text-red-500 dark:text-red-400 hidden">
                Por favor, rellena todos los campos obligatorios.
              </p>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const errorMessage = document.getElementById('formError');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const name = (document.getElementById('name') as HTMLInputElement).value;
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const phone = (document.getElementById('phone') as HTMLInputElement).value;
    const message = (document.getElementById('message') as HTMLTextAreaElement).value;

    if (!name || !email || !phone || !message) {
      errorMessage?.classList.remove('hidden');
      return;
    }

    errorMessage?.classList.add('hidden');
    // Aquí iría la lógica para enviar el formulario
    console.log('Formulario enviado:', { name, email, phone, message });
    
    // Reset form
    form.reset();
    alert('Mensaje enviado correctamente. Nos pondremos en contacto contigo pronto.');
  });
</script>