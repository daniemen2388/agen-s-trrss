---
// Add error handling for portfolio data fetching
const portfolioItems = [
  {
    id: 1,
    title: "E-commerce Fashion",
    image: "/images/portfolio/ecommerce.webp",
    description: "Tienda online de moda con integración completa de pagos"
  },
  {
    id: 2,
    title: "Restaurante Local",
    image: "/images/portfolio/restaurant.webp",
    description: "Web responsive para restaurante con sistema de reservas"
  },
  {
    id: 3,
    title: "Clínica Dental",
    image: "/images/portfolio/dental.webp",
    description: "Página web profesional para clínica dental"
  }
];
---

<div class="portfolio-slider">
  <div class="swiper-container">
    <div class="grid md:grid-cols-3 gap-8">
      {portfolioItems.map((item) => (
        <div class="portfolio-item bg-white dark:bg-dark-background-alt rounded-lg overflow-hidden shadow-lg">
          <div class="aspect-video relative overflow-hidden">
            <img
              src={item.image}
              alt={item.title}
              class="object-cover w-full h-full transform hover:scale-105 transition-transform duration-300"
              width="400"
              height="225"
              loading="lazy"
            />
          </div>
          <div class="p-6">
            <h3 class="font-signika font-semibold text-xl text-heading dark:text-dark-heading mb-2">
              {item.title}
            </h3>
            <p class="text-text dark:text-dark-text">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
  <div class="flex justify-center mt-8 space-x-2">
    {portfolioItems.map((_, index) => (
      <button
        class="w-3 h-3 rounded-full bg-gray-300 dark:bg-gray-600 hover:bg-primary dark:hover:bg-primary transition-colors duration-200"
        aria-label={`Go to slide ${index + 1}`}
      />
    ))}
  </div>
</div>

<style>
  .portfolio-slider {
    @apply max-w-6xl mx-auto;
  }
  
  .portfolio-item img {
    @apply transition-all duration-300;
  }
  
  .portfolio-item:hover img {
    @apply scale-105;
  }
</style>