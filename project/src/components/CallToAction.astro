---
import Button from './Button.astro';

interface Props {
  text: string;
}

const { text } = Astro.props;
---

<section class="py-20 bg-background dark:bg-dark-background">
  <div class="container mx-auto px-4 text-center">
    <Button 
      href="/contacto" 
      variant="cta" 
      className="border-2 border-primary text-primary hover:bg-primary hover:text-white dark:border-white dark:text-white dark:bg-transparent dark:hover:bg-dark-primary"
    >
      {text}
    </Button>
  </div>
</section>